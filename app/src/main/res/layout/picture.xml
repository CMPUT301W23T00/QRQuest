<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/Pictures"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:baselineAligned="true">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlSymmetry">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:baselineAligned="true">

            <FrameLayout
                android:id="@+id/comment_user_picture_container"
                android:layout_width="60dp"
                android:layout_height="60dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    app:cardCornerRadius="250dp"
                    android:layout_gravity="center"
                    app:cardBackgroundColor="@color/white">

                    <androidx.cardview.widget.CardView
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        app:cardCornerRadius="250dp"
                        android:layout_gravity="center">

                        <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/location_user_picture"
                            android:layout_width="45dp"
                            android:layout_height="45dp"
                            android:layout_gravity="center"
                            android:alpha="1"
                            android:scaleType="centerCrop"
                            android:layout_margin="4dp"
                            android:elevation="0dp"
                            android:src="@drawable/default_avatar" />
                    </androidx.cardview.widget.CardView>
                </androidx.cardview.widget.CardView>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/comment_ring"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:alpha="1"
                    android:scaleType="centerCrop"
                    android:layout_margin="0dp"
                    android:elevation="0dp"
                    android:src="@drawable/ring" />
            </FrameLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                tools:ignore="RtlSymmetry">

                <TextView
                    android:id="@+id/picture_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:text="@string/comments_user"
                    android:textColor="@color/black"
                    android:textStyle="bold" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.6"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/picture_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_qr_library_date"
                    android:padding="5dp"
                    android:text="@string/qr_code_name"
                    android:textColor="@color/white"
                    android:theme="@style/Theme.QRQuest"
                    android:layout_marginEnd="10dp">

                </TextView>
            </LinearLayout>

        </LinearLayout>
        <FrameLayout
            android:layout_width="400dp"
            android:layout_height="400dp">

            <androidx.cardview.widget.CardView
                android:layout_width="400dp"
                android:layout_height="400dp"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:layout_gravity="center"
                app:cardBackgroundColor="@color/white">

                <androidx.cardview.widget.CardView
                    android:layout_width="400dp"
                    android:layout_height="400dp"
                    android:layout_gravity="center">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/pictures_user_picture"
                        android:layout_width="400dp"
                        android:layout_height="400dp"
                        android:layout_gravity="center"
                        android:alpha="1"
                        android:scaleType="centerCrop"
                        android:elevation="0dp"
                        android:src="@drawable/default_avatar" />
                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>
        </FrameLayout>
    </LinearLayout>
</LinearLayout>