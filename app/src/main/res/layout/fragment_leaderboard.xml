<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_leaderboard_parent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:paddingEnd="10dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".ui.map.leaderboard.leaderboardFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/leaderboard_title1"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.4"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/top_3_players"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/leaderboard_qr_codes_list_top_half"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_weight="1"
            android:headerDividersEnabled="true" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:contentDescription="@string/ellipsis" />

        </LinearLayout>

        <TextView
            android:id="@+id/leaderboard_title2"
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:layout_weight="0.4"
            android:textColor="?attr/colorOnPrimary"
            android:text="@string/your_ranking"
            android:textSize="18sp" />

        <ListView
            android:id="@+id/leaderboard_qr_codes_list_bottom_half"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_weight="1"
            android:headerDividersEnabled="true" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>