<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/addProfileImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <View
        android:id="@+id/addProfileImageMask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/addProfileImage"
        android:layout_alignTop="@+id/addProfileImage"
        android:layout_margin="00dp"
        android:background="@drawable/mask_profileImage"
        app:layout_constraintBottom_toBottomOf="@+id/addProfileImage"
        app:layout_constraintEnd_toEndOf="@+id/addProfileImage"
        app:layout_constraintStart_toStartOf="@+id/addProfileImage"
        app:layout_constraintTop_toTopOf="@+id/addProfileImage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/addNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:textColor="#0f0f0f"
        app:layout_constraintBottom_toTopOf="@+id/addName"
        app:layout_constraintStart_toStartOf="@+id/addName" />

    <EditText
        android:id="@+id/addName"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/exampleName"
        android:inputType="textPersonName"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="252dp" />

    <TextView
        android:id="@+id/addPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/phone"
        android:textColor="#0f0f0f"
        app:layout_constraintBottom_toTopOf="@+id/addPhone"
        app:layout_constraintStart_toStartOf="@+id/addPhone" />

    <EditText
        android:id="@+id/addPhone"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/examplePhone"
        android:inputType="phone"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="343dp" />

    <TextView
        android:id="@+id/addEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/email"
        android:textColor="#0f0f0f"
        app:layout_constraintBottom_toTopOf="@+id/addEmail"
        app:layout_constraintStart_toStartOf="@+id/addEmail" />

    <EditText
        android:id="@+id/addEmail"
        android:layout_width="370dp"
        android:layout_height="48dp"
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/exampleEmail"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="438dp" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addCreateButton"
        android:layout_width="117dp"
        android:layout_height="49dp"
        android:layout_marginBottom="72dp"
        android:background="@drawable/button_shape"
        android:backgroundTintMode="src_over"
        android:text="@string/create"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/addEmail"
        app:layout_constraintVertical_bias="1.0" />



</androidx.constraintlayout.widget.ConstraintLayout>