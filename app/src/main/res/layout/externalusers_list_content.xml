<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    android:paddingStart="15dp"
    android:orientation="horizontal"
    tools:ignore="RtlSymmetry">

    <FrameLayout
        android:id="@+id/externaluser_list_profile_picture"
        android:layout_width="70dp"
        android:layout_height="70dp">

        <androidx.cardview.widget.CardView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            app:cardCornerRadius="250dp"
            android:layout_gravity="center"
            app:cardBackgroundColor="@color/white">

            <androidx.cardview.widget.CardView
                android:layout_width="50dp"
                android:layout_height="50dp"
                app:cardCornerRadius="250dp"
                android:layout_gravity="center">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/comment_user_picture"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:alpha="1"
                    android:scaleType="centerCrop"
                    android:layout_margin="4dp"
                    android:elevation="0dp"
                    android:src="@drawable/grug" />
            </androidx.cardview.widget.CardView>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/comment_ring"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:alpha="1"
            android:scaleType="centerCrop"
            android:layout_margin="0dp"
            android:elevation="0dp"
            android:src="@drawable/ring" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:paddingStart="5dp"
        android:paddingTop="15dp"
        android:paddingBottom="10dp"
        tools:ignore="RtlSymmetry">


        <TextView
            android:id="@+id/externaluser_list_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:theme="@style/Theme.QRQuest" />

        <TextView
            android:id="@+id/externaluser_list_aboutme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:ellipsize="end"
            android:theme="@style/Theme.QRQuest" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="0.3"
        android:gravity="center">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_forward_black_24dp"
            app:tint="?attr/colorOnPrimary"
            tools:ignore="ContentDescription" />

    </LinearLayout>
    
</LinearLayout>
