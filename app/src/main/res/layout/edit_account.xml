<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="76dp">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/editProfileImage"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/grug"
        app:layout_constraintBottom_toTopOf="@+id/editNameField"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/editProfileImageMask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignStart="@+id/editProfileImage"
        android:layout_alignTop="@+id/editProfileImage"
        android:layout_margin="00dp"
        android:background="@drawable/mask_profile_image"
        app:layout_constraintBottom_toBottomOf="@+id/editProfileImage"
        app:layout_constraintEnd_toEndOf="@+id/editProfileImage"
        app:layout_constraintStart_toStartOf="@+id/editProfileImage"
        app:layout_constraintTop_toTopOf="@+id/editProfileImage"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/editNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/name"
        android:textColor="#0f0f0f"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editNameField"
        app:layout_constraintStart_toStartOf="@+id/editNameField" />

    <EditText
        android:id="@+id/editNameField"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="21dp"
        android:autofillHints=""
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/exampleName"
        android:inputType="textPersonName"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/editAboutMeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/about_me"
        android:textColor="#0f0f0f"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editAboutMeField"
        app:layout_constraintStart_toStartOf="@+id/editAboutMeField" />

    <EditText
        android:id="@+id/editAboutMeField"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:autofillHints=""
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/exampleName"
        android:inputType="textMultiLine"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editNameField" />

    <TextView
        android:id="@+id/editPhoneText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/phone"
        android:textColor="#0f0f0f"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editPhoneField"
        app:layout_constraintStart_toStartOf="@+id/editPhoneField" />

    <EditText
        android:id="@+id/editPhoneField"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:autofillHints=""
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/examplePhone"
        android:inputType="phone"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editAboutMeField" />

    <TextView
        android:id="@+id/editEmailText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:text="@string/email"
        android:textColor="#0f0f0f"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/editEmailField"
        app:layout_constraintStart_toStartOf="@+id/editEmailField" />

    <EditText
        android:id="@+id/editEmailField"
        android:layout_width="340dp"
        android:layout_height="48dp"
        android:layout_marginStart="21dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="21dp"
        android:autofillHints=""
        android:background="@drawable/text_input"
        android:ems="10"
        android:hint="@string/exampleEmail"
        android:inputType="textEmailAddress"
        android:paddingHorizontal="15dp"
        android:textColorHint="#b3b3b3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editPhoneField" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editCancelButton"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="11dp"
        android:background="@drawable/button_shape"
        android:fontFamily="sans-serif"
        android:text="@string/cancel"
        android:textAllCaps="false"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@+id/editConfirmButton"
        app:layout_constraintEnd_toStartOf="@+id/editConfirmButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editEmailField"
        app:layout_constraintVertical_bias="0.0" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/editConfirmButton"
        android:layout_width="160dp"
        android:layout_height="55dp"
        android:layout_marginStart="11dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="21dp"
        android:background="@drawable/button_shape"
        android:backgroundTint="#000000"
        android:fontFamily="sans-serif"
        android:text="@string/confirm"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/editCancelButton"
        app:layout_constraintTop_toBottomOf="@+id/editEmailField"
        app:layout_constraintVertical_bias="0.0" />


</androidx.constraintlayout.widget.ConstraintLayout>
</androidx.core.widget.NestedScrollView>